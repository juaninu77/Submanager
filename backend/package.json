{
  "name": "submanager-backend",
  "version": "1.0.0",
  "description": "Backend API for Submanager - Subscription Management Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:setup": "node scripts/test-db-setup.js",
    "test:unit": "NODE_ENV=test jest --testPathPattern=services",
    "test:integration": "NODE_ENV=test jest --testPathPattern=api",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:studio:test": "NODE_ENV=test prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prod": "NODE_ENV=production tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "db:setup:prod": "npm run db:generate && npm run db:migrate:prod && npm run db:seed:prod",
    "db:test": "node scripts/test-neon-connection.js",
    "neon:setup": "node scripts/setup-neon.js",
    "pretest": "npm run test:setup"
  },
  "keywords": [
    "subscription",
    "management",
    "api",
    "saas",
    "fintech"
  ],
  "author": "Submanager Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "express-async-errors": "^3.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^6.0.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "prisma": "^5.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}